<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MyProfile"
    android:weightSum="10"
    android:background="@color/colorBackground"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/side_nav_bar">




        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/lib/com.mikhaellopez.circularimageviewsample"
            android:id="@+id/activity_myprofile_pp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_user"
            android:layout_centerInParent="true"
            app:civ_border_width="2dp"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            app:civ_border_color="#FF000000"/>

            <ImageButton
                android:id="@+id/activity_myprofile_addimagebutton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="52dp"
                android:layout_alignEnd="@+id/activity_myprofile_pp"
                android:src="@drawable/ic_add_black" />



            <TextView
                android:id="@+id/activity_myprofile_username"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/activity_myprofile_pp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21sp">

            </TextView>


    </RelativeLayout>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/profile_fragment_replace"
    android:layout_weight="6">



</FrameLayout>


</LinearLayout>